<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_task.custom_form_template" name="Custom Form">
        <t t-call="website.layout">
            <div class="h-25 mb-4">
                <div id="carouselExampleIndicators" class="carousel slide custom_slider">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="0" class="active" aria-current="true"
                            aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/website_task/static/src/img/1.png"
                                class="d-block w-100 custom_slider_image" alt="..." />
                        </div>
                        <div class="carousel-item">
                            <img src="/website_task/static/src/img/2.png"
                                class="d-block w-100 custom_slider_image" alt="..." />
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button"
                        data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                        data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <br/><br/>
            <div id="wrap" class="d-flex justify-content-center align-items-center mt-4"
                style="width:50%;">
                <div class="container mt-4">
                    <div class="col-md-12">
                        <form id="myForm" method="post" action="/employee/data/submit">
                            <div class="form-group mt-3 mb-3">
                                <label for="empcode">Employee Code:</label>
                                <input type="number" class="form-control" name="empcode" id="empcode"
                                    required="true" />
                            </div>
                            <div class="form-group mt-3 mb-3">
                                <label for="name">Employee Name:</label>
                                <input type="text" class="form-control" name="name" id="name"
                                    required="true" />
                            </div>
                            <div class="form-group mt-3 mb-3">
                                <label for="salary">Employee Salary:</label>
                                <input type="number" class="form-control" name="salary" id="salary"
                                    required="true" />
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 mb-3">Submit <!-- <a
                                href="#popup-box" style="color:white;
                                text-decoration:none;">Submit</a> -->
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
                        <p>
                            <a href="#" class="btn btn-primary mb-2">Learn more</a>
                        </p>
                    </div>
                    <div class="col-lg-6 pt16 pb16">
                        <img src="website_task/static/src/img/img.png" class="img img-fluid mx-auto" alt="" />
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>
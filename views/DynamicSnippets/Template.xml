<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- template for our snippet -->
    <template id="employee_info" name="Employee Card-Dynamic Snippet">
        <section class="emp-data">
            <div class="container">
                <div class="text-center py-5">
                    <p>Employee Details</p>
                </div>

                <!-- element to store list of cities using JS -->
                <div class="row justify-content-center" id="yh-cities-row"/>
            </div>
        </section>
    </template>

    <!-- To be used in JS for snippet options -->
    <template id="employee_info_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="ExploreCitiesOptions" data-selector=".emp-data" data-drop-in=".o_mega_menu nav">
            </div>
        </xpath>
    </template>
</odoo>